#include <stdio.h>

struct Person {
    int pid;
    char name[50];
    int age;
};

int main() {
    struct Person p;

    printf("Enter Person ID: ");
    scanf("%d", &p.pid);
    printf("Enter Name: ");
    scanf("%s", p.name);
    printf("Enter Age: ");
    scanf("%d", &p.age);

    printf("\nPerson Details:\n");
    printf("Person ID: %d\n", p.pid);
    printf("Name: %s\n", p.name);
    printf("Age: %d\n", p.age);

    return 0;
}
